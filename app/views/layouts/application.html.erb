<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Columbia Repair Report Platform!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg mb-3">

      <% if logged_in? %>
        <a href="<%= reports_path %>">
          <img src="/assets/logo.png" style="width:480px;height:80px;"/>
        </a>
      <% else %>
        <a href="<%= root_path %>">
          <img src="/assets/logo.png" style="width:480px;height:80px;"/>
        </a>
      <% end %>

      <%= link_to 'Log Out', logout_path, :class => 'ml-auto btn btn-columbia' if logged_in? %>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
