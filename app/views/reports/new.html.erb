<h2 class="text-columbia">Create New Report</h2>

<%= form_tag reports_path, :class => 'form', :multipart => true, :id => 'form' do %>
  <%= label :report, :building, 'Location: Building', :class => 'col-form-label' %>
  <%= text_field :report, :building, :value => @prefilled_building, :class => 'form-control' %>
  <%= label :report, :area, 'Location: Area', :class => 'col-form-label' %>
  <%= text_field :report, :area, :value => @prefilled_area, :class => 'form-control' %>
  <%= label :report, :uni, 'Please enter your UNI', :class => 'col-form-label' %>
  <%= text_field :report, :uni, :class => 'form-control' %>
  <%= label :report, :description, 'Description', :class => 'col-form-label' %>
  <%= text_area :report, :description, :class => 'form-control' %>
  <%= label :report, :file, 'Image', :class => 'col-form-label' %>
  <%= file_field :report, :file, :class => 'form-control' %>
  <%= label :report, :problemtype, 'Problem Type', :class => 'col-form-label'%>
  <%= select :report, :problemtype, @problemlist, {}, :class => 'form-control col-3' %>
  <%= label :report, :emergencylevel, 'Emergency Level', :class => 'col-form-label'  %>
  <%= select :report, :emergencylevel, ['Urgent','Ordinary'], {}, :class => 'form-control col-3' %>
  <br/>
  <%= submit_tag 'Publish', :class => 'btn btn-columbia' %>
  <%= link_to 'Cancel', root_path, :class => 'btn btn-secondary' %>
<% end %>
