<h2>ALL Existing Reports</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="reports">
  <thead>
    <tr>
      <th>Building</th>
      <th>Area</th>
      <th>ProblemType</th>
      <th><%= link_to 'Emergency Level', reports_path(:emergency_sort => @emergency_sort), :id => 'emergency_header' %></th>
      <th>Status</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>
          <%= report.building %>
        </td>
        <td>
          <%= report.area %>
        </td>
        <td>
          <%= report.problemtype %>
        </td>
        <td>
          <%= report.emergencylevel %>
        </td>
        <td>
          <%= report.status %>
        </td>
        <td>
          <%= link_to "More about", report_path(report)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Start New Report', new_report_path, :class => 'btn btn-primary' %>
