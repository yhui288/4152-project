<h2>ALL Exsisting Reports</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="reports">
  <thead>
    <tr>
      <th>Building</th>
      <th>Area</th>
      <th>ProblemType</th>
      <th>EmergencyLevel</th>
      <th>Status</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>
          <%= report.building %>
        </td>
        <td>
          <%= report.area %>
        </td>
        <td>
          <%= report.problemtype %>
        </td>
        <td>
          <%= report.emergencylevel %>
        </td>
        <td>
          <%= report.status %>
        </td>
        <td>
          <%= link_to "More about" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

